#!/bin/bash
menu=("󰌾 lock
󰜉 reload-wm
󰜉 restart-wm
󰍃 logout
󰤁 reboot
󰐥 shutdown")

choice="$(echo -e "${menu[@]}" | rofi -dmenu -l 6 -p "󰩈 Exit: ")"
[ -z "$choice" ] && exit 0
case "$choice" in
	󰌾*)
		pidof hyprlock >/dev/null || hyprlock
		;;
  󰜉*reload-wm)
		hyprctl reload
		;;
  󰜉*restart-wm)
    hyprctl dispatch exit
    ;;
	󰍃*)
		uwsm stop
		;;
	󰤁*)
		systemctl reboot
		;;
	󰐥*)
		systemctl poweroff
		;;
	*)
		exit 1
		;;
esac



