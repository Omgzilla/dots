progress-color=over #ff79c680

[mode=do-not-disturb]
invisible=1
on-notify=none

[mode=silent]
on-notify=none

[urgency=low]
border-color=#bd93f980

[urgency=normal]
border-color=#bd93f980

[urgency=critical]
